<h1 class="branding">
  <span class="sdc">SDC</span>
  <span class="product">ADMINUI</span>
  <span class="datacenter"></span>
</h1>

<div class="alert alert-error">
  <span class="msg"></span>
</div>

<form class="form">
  <div class="control-group">
    <label class="control-label">Username</label>
    <input class="input" type="text" value="{{login}}" autocomplete="off" name="username">
  </div>

  <div class="control-group">
    <label class="control-label">Password</label>
    <input class="input" type="password" name="password" value="">
  </div>

  <div class="controls">
    <button type="submit" class="btn btn-large btn-info">Sign In to SmartDataCenter</button>
  </div>
</form>
