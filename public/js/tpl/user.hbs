<div class="page-header">
  <h1>
    <div class="user-icon" style="background-image: url(https://www.gravatar.com/avatar/{{emailhash}}?d=identicon&s=65);">
    </div>

    <span class="cn"></span>
    <small class="uuid selectable"></small>
  </h1>
</div>
<div class="actions">
  <div class="notes-component-container"></div>
</div>


<section>
  <div class="row">
    <div class="col-md-6">
      <h3>User Details
        {{#role "operators"}}
        <div class="actions">
          <button class="edit-user btn btn-sm btn-info"><i class="fa fa-pencil"></i> Modify User</button>
        </div>
        {{/role}}
      </h3>


      <div class="user-details">
        <table class="table">
          <tbody>
          <tr>
            <th>Login</th>
            <td><span class="login"></span></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><span class="email selectable"></span></td>
          </tr>
          <tr>
            <th>Company</th>
            <td><span class="company"></span></td>
          </tr>
          <tr>
            <th>Phone</th>
            <td><span class="phone"></span></td>
          </tr>
          <tr>
            <th>Groups</th>
            <td><span class="groups"></span></td>
          </tr>
          <tr>
            <th>Provisioning</th>
            <td><span class="provisioning"></span></td>
          </tr>
          <tr>
            <th>Registered Developer</th>
            <td><span class="registered-developer"></span></td>
          </tr>
          <tr>
            <th>Two Factor Auth</th>
            <td><span class="portal-2fa"></span>
              <a class="toggle-2fa"></a>
            </td>
          </tr>
        </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-6">
      <h3>SSH Keys
        <div class="actions">
          {{#role "operators"}}
          <button class="btn btn-info btn-sm add-key"><i class="fa fa-plus"></i> Add Key</button>
          {{/role}}
        </div>
      </h3>

      <div class="ssh-keys">
        <div class="items"></div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="row">
    <div class="col-md-12">
      <div class="limits-region"></div>
    </div>
  </div>
</section>

<section class="networks">
  <div class="row">
    <div class="col-md-12">
      <h3>Networks &amp; Network Pools</h3>
      <div class="networks-region"></div>
      <div class="network-pools-region"></div>
    </div>
  </div>
</section>

<section>
  <div class="row">
    <div class="col-md-12">
      <h3>Virtual Machines</h3>
      <div class="container vms-filter">
        <form role="form" class="more">

          <div class="form-group col-sm-2">
            <label class="control-label">State</label>
            <select class="form-control" name="state" class="col-md-2">
              <option value="active">active</option>
              <option value="running">running</option>
              <option value="stopped">stopped</option>
              <option value="destroyed">destroyed</option>
            </select>
          </div>

          <div class="form-group col-sm-4">
            <label>Alias</label>
            <input class="form-control" type="text" name="alias" placeholder="alias">
          </div>

          <div class="form-group col-sm-3">
            <label>Server</label>
            <input class="form-control" type="text" name="server_uuid" placeholder="Server UUID">
          </div>

          <div class="form-group col-sm-2">
            <button class="btn btn-info" style="margin-top: 25px;"><i class="icon-filter icon-white"></i> Apply Filters</button>
          </div>
        </form>
      </div>
      <div class="vms-region"></div>
    </div>
  </div>
</section>
