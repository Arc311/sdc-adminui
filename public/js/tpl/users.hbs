<div class="page-header">
  <h1>Users &amp; Groups
    <div class="actions">
      <button data-event="new-user" class="btn btn-primary">
        <i class="icon-plus icon-white"></i>
        New User
      </button>
    </div>
  </h1>
</div>

<div class="row">
  <div class="span9 users-list">
    <table class="table">
      <thead>
        <tr>
          <th class="login">Login</th>
          <th class="name">Name</th>
          <th class="email">Email</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>

  <div class="filter-panel users-filter span3">
    <h3>Filter Options</h3>
    <div class="alert alert-error"></div>
    <form>
      <label>UUID</label>
      <input type="text" name="uuid" placeholder="UUID">

      <label>Login Name</label>
      <input type="text" name="login" placeholder="Login name">

      <label>Email</label>
      <input type="text" name="email" placeholder="Email Address">

      <label>First Name</label>
      <input type="text" name="givenname" placeholder="First Name">

      <label>Last Name</label>
      <input type="text" name="sn" placeholder="Last name">

      <button class="btn btn-large btn-info">Apply Filters</button>
    </form>
  </div>
</div>
