<div class="page-header">
  <h1>{{hostname}}
    <small class="uuid">{{uuid}}</small>
    <div class="server-state-container">
      Status &nbsp;
      {{#if setting_up}}
      <span class="server-setting-up">
        Setting Up
      </span>
      {{else}}
      <span class="server-state {{status}}">
        {{status}}
      </span>
      {{/if}}
    </div>
  </h1>
</div>

{{#unless setup}}
<div class="btn-group pull-right actions">
  <button class="btn btn-info setup">Setup Server</button>
</div>
{{/unless}}

<div class="row">
  <div class="span7">
    <table class="overview">
      <tbody>
        <tr>
          <th>Datacenter</th>
          <td>{{datacenter}}</td>
        </tr>

        <tr>
          <th>Hostname</th>
          <td>{{hostname}}</td>
        </tr>
        <tr class="rack">
          <th>Rack</th>
          <td>
            {{#if rack_identifier}}
            {{rack_identifier}}
            <a class="change-rack-id">Change <i class="icon-edit"></i></a>
            {{else}}
            <span style="color: #aaa;">No Rack Assigned</span>
            <a class="change-rack-id">Assign to Rack <i class="icon-edit"></i></a>
            {{/if}}
          </td>
        </tr>
        <tr>
          <th>Reserved</th>
          <td>
            {{#if reserved}}
            Reserved
            <a class="change-reserve">Unreserve <i class="icon-edit"></i></a>
            {{else}}
            Not Reserved
            <a class="change-reserve">Reserve <i class="icon-edit"></i></a>
            {{/if}}
          </td>
        </tr>
      </tbody>
    </table>
  </div>{{! /span}}

  <div class="span5">
    <div class="platform well">
      <h4>Platform Version</h4>
      <div class="current"><strong>Current</strong> {{current_platform}}</div>
      <div class="boot"><strong>Next Boot</strong> {{boot_platform}}</div>

      <a class="change-platform">Change Boot Platform <i class="icon-edit"></i></a>
    </div>
  </div>
</div>{{! /row}}

<div class="row">
  <div class="span12">
    <h3>Network Interfaces
        <div class="actions pull-right">
            <button class="btn manage-nics"><i class="icon-edit"></i> Manage Nics</i></button>
        </div>
    </h3>
    <div class="nics"></div>
  </div>

  <div class="span12">
    <h3>Hardware</h3>
    <table class="hardware">
      <tbody>
        <tr>
          <th>CPU Type</th>
          <td>{{cpu_type}}</td>
        </tr>
        <tr>
          <th>Physical CPUs</th>
          <td>{{cpu_physical_cores}}</td>
        </tr>
        <tr>
          <th>Total CPU Cores</th>
          <td>{{cpu_total_cores}}</td>
        </tr>
        <tr>
          <th>Serial Number</th>
          <td>{{serial_number}}</td>
        </tr>
        <tr>
          <th>Total Memory</th>
          <td>{{total_memory}} MiB</td>
        </tr>
      </tbody>
    </table>
  </div>
</div><!-- row-->

<div class="row">
  <div class="span8">
    <h3>Disks</h3>
    <table class="disks table table-striped">
      <thead>
        <tr>
          <th>Device</th>
          <th>Size</th>
        </tr>
      </thead>
      <tbody>
        {{#each disks}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.size}} GB</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <h3>Traits</h3>
    {{#if traits.length}}
    <table class="traits table table-striped">
      <thead>
        <tr>
          <th>Property</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        {{#each traits}}
        <tr>
          <td style="width: 100px;">{{this.name}}</td>
          <td>{{this.value}}</td>
        </tr>
        {{/each}}
      </tbody>
      <tfoot>
      <td colspan="2"><button class="btn btn-small modify-traits"><i class="icon-edit"></i> Edit Traits</button></td>
    </tfoot>
    </table>
    {{else}}
    <div class="zero-state">
      <p>There are no traits configured for this server.</p>
      <button class="btn btn-small modify-traits"><i class="icon-edit"></i> Assign Traits</button>
    </div>
    {{/if}}
  </div>

  <div class="span4">
    <div class="notes"></div>
  </div>
</div>


<div class="row">
  <div class="span12">
    <br>
    <div class="well" style="overflow: hidden">
      <p>The following actions are destructive and cannot be undone.</p>
      <div class="pull-left">
        <a class="btn btn-warning reboot"><i class="icon icon-white icon-refresh"></i> Reboot Server</a>
      </div>
      <div class="pull-right">
        <a class="btn btn-danger factory-reset">Factory Reset</a>
        <a class="btn btn-danger forget"><i class="icon icon-white icon-trash"></i> Forget Server</a>
      </div>
    </div>
  </div>
</div>
