<div class="status {{status}}"></div>

<div class="name">
  <a href="/servers/{{uuid}}">{{hostname}}</a>
  {{#if reserved}}
  <span class="reserved"><i class="icon-lock"></i></span>
  {{/if}}
  <span class="uuid">{{uuid}}</span>
  <div class="traits">
    {{#if traits.ssd}}
    <span class="ssd">SSD</span>
    {{/if}}
    {{#if traits.manta}}
    <span class="manta">MANTA</span>
    {{/if}}
    {{#if traits.customer}}
    <span class="customer">CUSTOMER</span>
    {{/if}}
  </div>
</div>

{{#if setup}}
<div class="memory-usage">
  <div class="memory-usage-avail">
    <strong>Provisionable</strong>
    <span class="avail
    {{#unless memory_provisionable_percent}}
    full
    {{/unless}}
    ">{{memory_provisionable_gb}} GB</span>
  </div>
  <div class="memory-usage-graph"></div>
  <div class="memory-usage-total">
    <strong>Total</strong>
    <span class="total">{{memory_total_gb}} GB</span>
  </div>
</div>
</div>

{{else}}

<div class="setup-status">
  {{#if not_setup}}
    {{#if setting_up}}
    Setting up
    {{else}}

    {{#role "operators"}}
    Requires Setup
    <button class="setup btn setup"><i class="icon-magic"></i> Setup this Server</button>
    {{/role}}
    {{/if}}
  {{/if}}
</div>

{{/if}}

<div class="last-status">
  <div class="last-platform">
    <strong><i class="icon-location-arrow"></i></strong>
    <span>{{sdc_version}}.{{current_platform}}</span>
  </div>

  <div class="last-boot">
    <strong><i class="icon-power-off"></i></strong><span>{{last_boot}}</span>
  </div>
  <div class="last-heartbeat">
    <strong><i class="icon-heart"></i></strong><span>{{last_heartbeat}}</span></div>
  </div>
</div>
