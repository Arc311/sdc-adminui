<td class="status">
  <span class="
    label
    {{#if running}}
      {{status}}
    {{else}}
      label-warn
    {{/if}}
    ">
    {{#if running}}
      <i class="icon-ok-sign icon-white"></i>
    {{/if}}
    {{status}}
  </span>
</td>
<td class="name">
  <a href="/servers/{{uuid}}">{{hostname}}</a>
  <span class="uuid">{{uuid}}</span>
</td>
<td class="last-status">
  <div class="last-boot"><i class="icon-off"></i> {{last_boot}}</div>
  <div class="last-heartbeat"><i class="icon-heart"></i> {{last_heartbeat}}</div>
</td>
<td class="memory">
  <span class="ram">{{ram}} MB</span>
</td>
<td>
  {{#if not_setup}}
    {{#if setting_up}}
    Setting up
    {{else}}
    <button class="setup btn btn-info setup"><i class="icon-magic"></i> Setup Server</button>
    {{/if}}
  {{/if}}
</td>
