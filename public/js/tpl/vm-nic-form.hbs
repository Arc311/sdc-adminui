<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h3>
            {{#if mac}}
            Configure Network Interface
            {{else}}
            Attach New Network Interface
            {{/if}}
          </h3>
        </div>

        <div class="modal-body">
          <div class="form-horizontal">
            <p class="alert alert-warn">Please Note that any changes to Network Interfaces triggers a reboot on the Virtual Machine.</p>
            <div class="nic-config-component"></div>
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn" data-dismiss="modal">Cancel</button>
          <button class="btn btn-primary" type="submit">
            {{#if mac}}
            Save Network Interface
            {{else}}
            Attach Network Interface
            {{/if}}
          </button>
        </div>
    </div>
</div>
