<h3>Snapshots</h3>
<table class="table">
  {{#if hasSnapshots}}
  <thead>
    <th>Name</th>
    <th>Snapshot Date</th>
    <th></th>
  </thead>
  {{/if}}

  <tbody>
    {{#unless hasSnapshots}}
    <tr><td class="empty">This VM does not have any snapshots.</td></tr>
    {{/unless}}
  </tbody>
  {{#role "operators"}}
  <tfoot>
    <td><button class="btn btn-info"><i class="icon-camera"></i> Create Snapshot</button> </h3></td>
  </tfoot>
  {{/role}}
</table>
