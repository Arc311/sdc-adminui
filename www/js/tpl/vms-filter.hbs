<div class="row">
    <div class="col-md-12">
        <form class="form quick" role="form">
            <div class="form-group col-sm-2">
                <select name="property" class="form-control">
                    <option value="uuid">UUID</option>
                    <option value="owner">Owner UUID</option>
                    <option value="package_name">Package Name</option>
                    <option value="ip">IP Address</option>
                    <option value="alias">Alias</option>
                </select>
            </div>

            <div class="form-group col-sm-6">
                <div class="input-group">
                    <input class="form-control" name="value" type="text">

                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-info"><span class="fa fa-search"></span></button>
                    </div>
                </div>
            </div>


            <div class="form-group col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-sort"></span></span>
                    <select name="sort" class="form-control sort">
                        <option value="create_timestamp.desc">Last Provisioned</option>
                        <option value="alias">Alias</option>
                    </select>
                </div>
            </div>

            <div class="form-group col-sm-12 text-center">
                <button type="button" class="toggle-filter btn-link" data-toggle="button"><i class="fa fa-filter"></i>Show More Filter Options</button>
            </div>
        </form>
    </div>
</div>

<div class="row more">
    <hr>

    <div class="col-md-12">
        <form class="more" role="form">
            <div class="form-group col-md-4">
                <label>Owner UUID</label>
                <input class="form-control" type="text" name="owner_uuid" placeholder="Search by login or uuid">
            </div>

            <div class="form-group col-md-4">
                <label>Image UUID</label>
                <input class="form-control" type="text" name="image_uuid" placeholder="Search by image name">
            </div>

            <div class="form-group col-md-4">
                <label>Server UUID</label>
                <input class="form-control" type="text" name="server_uuid" placeholder="Server UUID">
            </div>


            <div class="form-group col-md-3">
                <label>State</label>
                <select class="form-control" name="state">
                    <option value="">any</option>
                    <option value="running" selected>running</option>
                    <option value="stopped">stopped</option>
                    <option value="active">active</option>
                    <option value="destroyed">destroyed</option>
                </select>
            </div>

            <div class="form-group col-md-7">
                <label>Provisioned Between</label>
                <div>
                    <div style="display: inline-block; width: 300px;">
                        <div id="datetimepicker-from" class="input-group date">
                            <input class="form-control" data-format="yyyy-MM-dd hh:mm:ss" type="text"></input>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div style="display: inline-block; width: 300px;">
                        <div id="datetimepicker-to" class="input-group date">
                            <input class="form-control" data-format="yyyy-MM-dd hh:mm:ss" type="text"></input>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group col-md-1 buttons">
                <button class="btn btn-info btn-filter"><i class="fa fa-filter"></i> Apply Filters</button>
            </div>
        </form>
    </div>
</div>
