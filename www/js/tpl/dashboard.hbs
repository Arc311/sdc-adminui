<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>Dashboard</h1>
        </div>
    </div>
</div>

<div class="col-sm-12">
    <div class="first-row">
        <div class="counter">
            <div class="vms">
                <div class="name">Virtual Machines</div>
                <div class="value vm-count">-</div>
            </div>
        </div>
        <div class="counter">
            <div class="users">
                <div class="name">Users</div>
                <div class="value user-count">-</div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 servers">
    <div class="data">
        <div class="stat">
            <div class="name">Servers</div>
            <div class="value"><span class="server-count">-</span></div>
        </div>
        <div class="stat">
            <div class="name">Servers Reserved</div>
            <div class="value"> <span class="server-reserved">-</span> / <span class="server-count">-</span> </div>
        </div>
        <div class="stat">
            <div class="name">RAM Provisionable / Total </div>
            <div class="value"> <span class="server-provisionable-memory"></span> / <span class="server-total-memory"></span> </div>
        </div>
        <div class="stat">
            <div class="name">Utilization %</div>
            <div class="value"><span class="server-utilization-percent"></span></div>
        </div>
    </div>
</div>
